{
  "extends": "@repo/config/typescript/react-library.json",
  "compilerOptions": {
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "lib": ["dom", "ES2020"],
    "target": "ES2020",
    "types": ["node", "vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "#/__tests__/*": ["./__tests__/*"],
      "#/root/*": ["./*"],
      "#/*": ["./src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["dist", "build", "node_modules", "src/languages/sas.ts"]
}
