{
  "name": "forge",
  "scripts": {
    "prebuild": "turbo build --filter=@repo/db-prisma",
    "build": "turbo build --parallel --concurrency=8",
    "build:affected": "turbo build --filter='...[origin/main]' --concurrency=8",
    "build:doppler": "turbo build:doppler --concurrency=8",
    "claude:agents:validate": "node .claude/scripts/validate-claude.mjs agents",
    "claude:command-specs:lint": "node .claude/scripts/validate-claude.mjs commands",
    "claude:validate:agents": "node .claude/scripts/validate-claude.mjs agents",
    "claude:validate:commands": "node .claude/scripts/validate-claude.mjs commands",
    "claude:validate:delegation": "node .claude/scripts/validate-claude.mjs delegation",
    "claude:validate:test": "node --test .claude/scripts/validate.test.mjs",
    "claude:validate:worktree": "node .claude/scripts/validate-claude.mjs worktree",
    "deps:check": "pnpm outdated --recursive",
    "deps:dedupe": "pnpm dedupe",
    "predev": "turbo build --filter=@repo/db-prisma",
    "dev": "turbo dev --filter='!./labs/*' --concurrency=15",
    "dev:doppler": "turbo dev:doppler",
    "doppler": "turbo doppler",
    "doppler:open": "turbo doppler:open",
    "doppler:pull": "turbo doppler:pull",
    "doppler:secrets": "turbo doppler:secrets",
    "doppler:secrets:download": "turbo doppler:secrets:download",
    "doppler:secrets:upload": "turbo doppler:secrets:upload",
    "doppler:setup": "doppler setup",
    "doppler:whoami": "doppler whoami",
    "lint": "turbo lint",
    "lint:affected": "turbo lint --filter='...[origin/main]' --only",
    "lint:staged": "lint-staged",
    "playwright:install": "pnpm exec playwright install --with-deps chromium firefox webkit",
    "prepare": "husky",
    "repo:ci": "NODE_ENV=ci turbo repo:ci --concurrency=8",
    "repo:circular": "turbo circular",
    "repo:knip": "turbo knip",
    "repo:preflight": "turbo preflight --affected --continue=always",
    "repo:reset": "pnpm scripts:repo:clean && pnpm install && pnpm build",
    "repo:translate": "turbo translate",
    "scripts:coverage": "node scripts/coverage.mjs",
    "scripts:coverage:ci": "node scripts/coverage.mjs --quiet --format=summary",
    "scripts:doppler:sync": "node scripts/doppler-sync.mjs",
    "scripts:hooks:setup": "husky",
    "scripts:repo:bump-deps": "pnpm install && node scripts/update-workspace.mjs",
    "scripts:repo:clean": "./scripts/clean-everything.sh",
    "scripts:repo:mac-setup": "./scripts/mac-setup.sh",
    "scripts:repo:setup": "pnpm install && pnpm build && pnpm playwright:install && husky",
    "scripts:validate": "node scripts/validate.mjs all && node .claude/scripts/validate-claude.mjs all",
    "scripts:validate:all": "node scripts/validate.mjs all && node .claude/scripts/validate-claude.mjs all",
    "scripts:validate:contamination": "node scripts/validate.mjs contamination",
    "scripts:validate:coverage": "node scripts/validate.mjs coverage",
    "test": "NODE_ENV=ci turbo test --concurrency=8",
    "test:affected": "turbo test --filter='...[origin/main]' --concurrency=8",
    "test:coverage:json": "vitest run --coverage --reporter=json",
    "test:e2e": "NODE_ENV=ci turbo test:e2e --concurrency=8",
    "test:ui": "NODE_ENV=ci turbo test:ui --concurrency=8",
    "test:unit": "NODE_ENV=ci turbo test:unit --concurrency=8",
    "typecheck": "turbo typecheck --only",
    "typecheck:affected": "turbo typecheck --filter='...[origin/main]' --only",
    "validate:mcp-schemas": "pnpm --filter @repo/mcp-server validate:schemas"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "catalog:",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.0",
    "turbo": "^2.5.8",
    "typescript": "^5.9.2"
  },
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=22",
    "pnpm": ">=10.0.0"
  }
}
