{
  "name": "forge",
  "scripts": {
    "prebuild": "turbo build --filter=@repo/database",
    "build": "turbo build --parallel --concurrency=8",
    "build:affected": "turbo build --filter='...[origin/main]' --concurrency=8",
    "build:doppler": "turbo build:doppler --concurrency=8",
    "coverage": "node scripts/coverage.mjs",
    "coverage:ci": "node scripts/coverage.mjs --quiet --format=summary",
    "deps:check": "pnpm outdated --recursive",
    "deps:dedupe": "pnpm dedupe",
    "dev:doppler": "turbo dev:doppler",
    "doppler": "turbo doppler",
    "doppler:open": "turbo doppler:open",
    "doppler:pull": "turbo doppler:pull",
    "doppler:secrets": "turbo doppler:secrets",
    "doppler:secrets:download": "turbo doppler:secrets:download",
    "doppler:secrets:upload": "turbo doppler:secrets:upload",
    "doppler:setup": "doppler setup",
    "doppler:sync": "node scripts/doppler-sync.mjs",
    "doppler:whoami": "doppler whoami",
    "lint": "turbo lint",
    "lint:affected": "turbo lint --filter='...[origin/main]' --only",
    "playwright:install": "pnpm exec playwright install --with-deps chromium firefox webkit",
    "predev": "turbo build --filter=@repo/database",
    "prisma:generate": "turbo prisma:generate",
    "prisma:generate:doppler": "turbo prisma:generate:doppler",
    "prisma:migrate": "pnpm --filter @repo/database prisma:migrate",
    "prisma:migrate:doppler": "pnpm --filter @repo/database prisma:migrate:doppler",
    "repo:bump-deps": "pnpm install && node scripts/update-workspace.mjs",
    "repo:ci": "NODE_ENV=ci turbo repo:ci --concurrency=8",
    "repo:circular": "turbo circular",
    "repo:clean": "./scripts/clean-everything.sh",
    "repo:knip": "turbo knip",
    "repo:mac-setup": "./scripts/mac-setup.sh",
    "repo:preflight": "turbo preflight --affected --continue=always",
    "repo:reset": "pnpm repo:clean && pnpm install && pnpm build",
    "repo:setup": "pnpm install && pnpm build && pnpm playwright:install",
    "repo:translate": "turbo translate",
    "test": "turbo test --concurrency=8",
    "test:affected": "turbo test --filter='...[origin/main]' --concurrency=8",
    "test:coverage:json": "vitest run --coverage --reporter=json",
    "test:e2e": "turbo test:e2e --concurrency=8",
    "test:ui": "turbo test:ui --concurrency=8",
    "test:unit": "turbo test:unit --concurrency=8",
    "typecheck": "turbo typecheck --only",
    "typecheck:affected": "turbo typecheck --filter='...[origin/main]' --only"
  },
  "devDependencies": {
    "@logtape/cloudwatch-logs": "^1.0.4",
    "@playwright/test": "^1.54.1",
    "@testing-library/jest-dom": "catalog:",
    "@testing-library/react": "catalog:",
    "@testing-library/user-event": "catalog:",
    "@types/eslint": "^9.6.1",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitejs/plugin-react": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "eslint": "catalog:",
    "knip": "catalog:",
    "madge": "catalog:",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=22",
    "pnpm": ">=10.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@firebase/util",
      "@parcel/watcher",
      "@pkgr/core",
      "@prisma/client",
      "@prisma/engines",
      "@sentry-internal/node-cpu-profiler",
      "@sentry/cli",
      "@swc/core",
      "@tailwindcss/oxide",
      "@ulixee/chrome-136-0",
      "@ulixee/unblocked-agent-mitm-socket",
      "better-sqlite3",
      "bufferutil",
      "core-js",
      "core-js-pure",
      "edgedriver",
      "esbuild",
      "eslint-config-prettier",
      "geckodriver",
      "leveldown",
      "napi-postinstall",
      "oxc-resolver",
      "prisma",
      "protobufjs",
      "puppeteer",
      "sharp",
      "unrs-resolver"
    ],
    "overrides": {
      "@pkgr/core@=0.2.8": ">=0.2.9",
      "cookie@<0.7.0": ">=0.7.0",
      "esbuild@<=0.24.2": ">=0.25.0",
      "napi-postinstall@=0.3.1": ">=0.3.2",
      "node-fetch@<2.6.7": ">=2.6.7",
      "on-headers@<1.1.0": ">=1.1.0",
      "path-to-regexp@>=4.0.0 <6.3.0": ">=6.3.0"
    }
  }
}
