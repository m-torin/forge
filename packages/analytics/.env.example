# Analytics Package Environment Variables
# Copy relevant variables to your app's .env.local file

# =============================================================================
# POSTHOG CONFIGURATION
# =============================================================================

# PostHog client-side configuration (required for browser analytics)
NEXT_PUBLIC_POSTHOG_KEY=phc_your-posthog-public-key-here
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# PostHog server-side configuration (required for feature flags and server analytics)
POSTHOG_API_KEY=phc_your-posthog-server-key-here
POSTHOG_HOST=https://app.posthog.com
POSTHOG_PERSONAL_API_KEY=phx_your-personal-api-key-here
POSTHOG_PROJECT_ID=12345

# =============================================================================
# SEGMENT CONFIGURATION (Optional)
# =============================================================================

# Segment client-side configuration
NEXT_PUBLIC_SEGMENT_WRITE_KEY=your-segment-write-key-here

# Segment server-side configuration
SEGMENT_WRITE_KEY=your-segment-server-key-here

# =============================================================================
# VERCEL ANALYTICS (Optional)
# =============================================================================

# Vercel Web Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# =============================================================================
# GOOGLE ANALYTICS (Optional)
# =============================================================================

# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================

# Environment detection (affects analytics behavior)
APP_ENV=development
NODE_ENV=development

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable specific analytics providers
ENABLE_POSTHOG=true
ENABLE_SEGMENT=false
ENABLE_VERCEL_ANALYTICS=false
ENABLE_GOOGLE_ANALYTICS=false

# =============================================================================
# NOTES
# =============================================================================

# PostHog Setup:
# 1. Create account at https://posthog.com/
# 2. Get API key from Project Settings > API Keys
# 3. Get project ID from Project Settings

# Segment Setup:
# 1. Create account at https://segment.com/
# 2. Create source and get write key
# 3. Configure destinations as needed

# Vercel Analytics Setup:
# 1. Enable in Vercel dashboard
# 2. Get analytics ID from project settings