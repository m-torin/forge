{
  "extends": "@repo/config/typescript/react-library.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "types": ["vitest/globals", "node", "@types/babel__traverse"],
    "baseUrl": ".",
    "paths": {
      "@repo/*": ["../*"],
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*",
    "__tests__/**/*",
    "vitest.config.ts",
    "eslint.config.ts",
    "keys.ts",
    "client/**/*",
    "server/**/*",
    "examples/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
