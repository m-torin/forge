{
  "name": "@repo/uix-system",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./mantine": "./src/mantine/index.ts",
    "./mantine/*": "./src/mantine/*",
    "./tailwind": "./src/tailwind/index.ts",
    "./tailwind/*": "./src/tailwind/*",
    "./tailwind/v3": "./src/tailwind/v3/index.ts",
    "./tailwind/v3/*": "./src/tailwind/v3/*",
    "./tailwind/v3/components": "./src/tailwind/v3/components/index.ts",
    "./tailwind/v3/collaboration": "./src/tailwind/v3/collaboration/index.ts",
    "./tailwind/v4": "./src/tailwind/v4/index.ts",
    "./tailwind/v4/*": "./src/tailwind/v4/*",
    "./tailwind/v4/labs": "./src/tailwind/v4/labs/index.ts",
    "./tailwind/v4/labs/*": "./src/tailwind/v4/labs/*",
    "./shared/i18n": "./src/shared/i18n/index.ts"
  },
  "scripts": {
    "circular": "madge --circular --extensions ts,tsx,js,jsx .",
    "coverage:collect": "vitest run --coverage --reporter=json",
    "knip": "knip --reporter json --exclude unlisted,unresolved,exports,dependencies,files,binaries,types,duplicates",
    "lint": "eslint . --fix --cache",
    "test": "vitest run",
    "test:a11y": "vitest run --config=vitest.a11y.config.ts",
    "test:coverage": "vitest run --coverage",
    "test:coverage:json": "vitest run --coverage --reporter=json",
    "test:ui": "vitest --ui --no-open",
    "test:visual": "playwright test",
    "test:visual:chromium": "playwright test --project=chromium",
    "test:visual:firefox": "playwright test --project=firefox",
    "test:visual:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
    "test:visual:ui": "playwright test --ui",
    "test:visual:update": "playwright test --update-snapshots",
    "test:visual:webkit": "playwright test --project=webkit",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
