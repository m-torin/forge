{
  "extends": "@repo/config/typescript/react-library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["vitest/globals"],
    "declaration": false,
    "declarationMap": false,
    "paths": {
      "#/__tests__/*": ["./__tests__/*"],
      "#/root/*": ["./*"],
      "#/*": ["./src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist", "build", "coverage", "**/*.stories.tsx"]
}
