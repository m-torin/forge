{
  "extends": "@repo/config/typescript/react-library.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "types": ["vitest/globals", "node"],
    "baseUrl": ".",
    "paths": {
      "#/*": ["./src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules",
    "dist",
    "src/__tests__",
    "src/playwright/templates",
    "src/vitest/examples/**",
    "src/vitest/**/*.test.ts",
    "src/vitest/**/*.spec.ts",
    "src/playwright/**/*.spec.ts"
  ]
}
