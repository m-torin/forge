{
  "name": "@repo/internationalization",
  "private": true,
  "type": "module",
  "exports": {
    "./client": "./src/client.ts",
    "./server": "./src/server.ts",
    "./client/next": "./src/client-next.ts",
    "./server/next": "./src/server-next.ts",
    "./middleware": "./src/middleware.ts",
    "./routing": "./src/routing.export.ts",
    "./navigation": "./src/navigation.ts",
    "./request": "./src/request.ts",
    "./types": "./src/types.ts"
  },
  "scripts": {
    "circular": "madge --circular --extensions ts,tsx,js,jsx .",
    "coverage:collect": "vitest run --coverage --reporter=json",
    "knip": "knip --fix --reporter json",
    "lint": "eslint . --fix",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:json": "vitest run --coverage --reporter=json",
    "test:ui": "[ \"$CI\" = \"true\" ] && vitest run || vitest --ui --no-open",
    "test:watch": "vitest",
    "translate": "npx -y languine@latest translate",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@repo/observability": "workspace:*",
    "@repo/uix-system": "workspace:*",
    "@t3-oss/env-nextjs": "catalog:",
    "chalk": "^5.4.1",
    "next-intl": "^4.0.0",
    "server-only": "^0.0.1",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@repo/config": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "@repo/qa": "workspace:*",
    "@vitest/ui": "catalog:",
    "next": "catalog:",
    "react": "catalog:",
    "vite-tsconfig-paths": "catalog:",
    "vitest": "catalog:"
  }
