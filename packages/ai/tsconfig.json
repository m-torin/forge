{
  "extends": "@repo/config/typescript/react-library.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "types": ["vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "#/__tests__/*": ["./__tests__/*"],
      "#/root/*": ["./*"],
      "#/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "__tests__/**/*.ts", "__tests__/**/*.tsx"],
  "exclude": ["node_modules", "dist", "examples/**/*", "demo-*.ts"]
}
