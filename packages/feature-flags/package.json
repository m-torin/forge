{
  "name": "@repo/feature-flags",
  "version": "0.1.0",
  "description": "Feature flags implementation using Vercel Flags SDK",
  "type": "module",
  "exports": {
    ".": "./src/shared/index.ts",
    "./client": "./src/client.ts",
    "./server": "./src/server.ts",
    "./client/next": "./src/client-next.ts",
    "./server/next": "./src/server-next.ts",
    "./server/edge": "./src/server-edge.ts",
    "./types": "./src/shared/types.ts",
    "./middleware": "./src/middleware/index.ts"
  },
  "main": "./src/server.ts",
  "scripts": {
    "circular": "madge --circular --extensions ts,tsx,js,jsx .",
    "coverage:collect": "vitest run --coverage --reporter=json",
    "knip": "knip --fix --reporter json",
    "lint": "eslint . --fix",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:json": "vitest run --coverage --reporter=json",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@repo/observability": "workspace:*",
    "@t3-oss/env-nextjs": "catalog:",
    "@vercel/edge-config": "^1.4.0",
    "@vercel/flags": "^3.1.1",
    "nanoid": "catalog:",
    "next": "catalog:",
    "posthog-js": "^1.257.0",
    "posthog-node": "^5.5.0",
    "react": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@repo/config": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "@repo/qa": "workspace:*"
  }
}
