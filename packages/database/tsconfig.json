{
  "extends": "@repo/config/typescript/react-library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "#/__tests__/*": ["./__tests__/*"],
      "#/root/*": ["./*"],
      "#/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "prisma-generated/zod/**/*",
    "prisma-generated/client/runtime/**/*",
    "prisma-generated/zod/inputTypeSchemas/**/*",
    "prisma-generated/**/*.ts"
  ]
}
