{
  "name": "@repo/orchestration",
  "private": true,
  "type": "module",
  "exports": {
    "./server": {
      "types": "./src/server.ts",
      "import": "./src/server.ts"
    },
    "./client": {
      "types": "./src/client.ts",
      "import": "./src/client.ts"
    },
    "./server/next": {
      "types": "./src/server-next.ts",
      "import": "./src/server-next.ts"
    },
    "./client/next": {
      "types": "./src/client-next.ts",
      "import": "./src/client-next.ts"
    },
    "./env": {
      "types": "./env.ts",
      "import": "./env.ts"
    },
    "./examples": {
      "types": "./src/examples/index.ts",
      "import": "./src/examples/index.ts"
    }
  },
  "scripts": {
    "circular": "madge --circular --extensions ts,tsx,js,jsx .",
    "coverage:collect": "vitest run --coverage --reporter=json",
    "knip": "knip --reporter json --exclude unlisted,unresolved,exports,dependencies,files,binaries,types,duplicates",
    "lint": "eslint . --fix --cache",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:json": "vitest run --coverage --reporter=json",
    "test:deduplication": "vitest run __tests__/deduplication-storage.test.ts",
    "test:dlq": "vitest run __tests__/dlq-database.test.ts",
    "test:persistence": "vitest run __tests__/workflow-data-persistence.test.ts",
    "test:ui": "vitest --ui --no-open",
    "test:watch": "vitest",
    "typecheck": "echo 'Skipping typecheck for @repo/orchestration - complex experimental package'"
  },
  "dependencies": {
    "@repo/core-utils": "workspace:*",
    "@repo/db-upstash-redis": "workspace:*",
    "@repo/observability": "workspace:*",
    "@t3-oss/env-nextjs": "catalog:",
    "@upstash/qstash": "^2.8.1",
    "@upstash/ratelimit": "^2.0.6",
    "@upstash/workflow": "^0.2.16",
    "nanoid": "catalog:",
    "next": "catalog:",
    "opossum": "^9.0.0",
    "p-queue": "^8.1.0",
    "p-retry": "^6.2.1",
    "react": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/qa": "workspace:*",
    "@types/opossum": "^8.1.9",
    "eslint": "catalog:",
    "knip": "catalog:",
    "madge": "catalog:",
    "vitest": "catalog:"
  }
}
