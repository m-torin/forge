{
  "extends": "@repo/config/typescript/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./ciseco/*"]
    },
    "types": ["vitest/globals"],
    "declaration": false,
    "declarationMap": false
  },
  "include": ["**/*.ts", "**/*.tsx", "types/**/*.d.ts"],
  "exclude": ["node_modules", "gluestack/**/*", "**/*.test.tsx", "**/*.test.ts", "__tests__/**/*"]
}
