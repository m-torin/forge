# Auth Package Environment Variables  
# Copy relevant variables to your app's .env.local file

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Better Auth secret (REQUIRED - must be 32+ characters)
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-32-character-secret-key-here-make-it-random

# Database connection (REQUIRED)
DATABASE_URL=postgresql://user:password@localhost:5432/database

# Application URL (REQUIRED)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# OPTIONAL OAUTH PROVIDERS
# =============================================================================

# GitHub OAuth (Optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Google OAuth (Optional)  
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Discord OAuth (Optional)
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# =============================================================================
# ADDITIONAL OAUTH PROVIDERS
# =============================================================================

# Facebook OAuth (Optional)
FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret

# Microsoft OAuth (Optional)
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# =============================================================================
# ADDITIONAL CONFIGURATION
# =============================================================================

# Better Auth URL (optional - defaults to NEXT_PUBLIC_APP_URL)
BETTER_AUTH_URL=http://localhost:3000

# Trusted origins for CORS (optional)
BETTER_AUTH_TRUSTED_ORIGINS=http://localhost:3000,https://yourdomain.com

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================

# Session duration in seconds (optional - defaults to 7 days)
BETTER_AUTH_SESSION_EXPIRES_IN=604800

# Cookie security settings (optional)
BETTER_AUTH_SECURE_COOKIE=false

# =============================================================================
# SMS PROVIDERS (for Phone Number Authentication)
# =============================================================================

# SMS Provider - Choose: twilio, aws-sns, console (dev only)
SMS_PROVIDER=console

# Twilio Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# AWS SNS Configuration  
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_SNS_TOPIC_ARN=your-sns-topic-arn

# =============================================================================
# UPSTASH REDIS (for Rate Limiting & Caching)
# =============================================================================

# Upstash Redis Configuration
UPSTASH_REDIS_REST_URL=your-upstash-redis-url
UPSTASH_REDIS_REST_TOKEN=your-upstash-redis-token

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable specific authentication features
AUTH_FEATURES_RATE_LIMITING=true
AUTH_FEATURES_ANALYTICS=true
AUTH_FEATURES_PHONE_AUTH=true
AUTH_FEATURES_EMAIL_OTP=true
AUTH_FEATURES_ANONYMOUS_SESSIONS=true
AUTH_FEATURES_ACCOUNT_SECURITY=true
AUTH_FEATURES_API_KEYS=true

# =============================================================================
# ANALYTICS (Optional)
# =============================================================================

# Analytics endpoint for custom analytics
ANALYTICS_ENDPOINT=/api/analytics

# =============================================================================
# DEVELOPMENT KEYS (Safe for .env.example)
# =============================================================================

# These are safe development keys that can be committed to the repository
# DO NOT use these in production - they are for development/testing only

# Development OAuth Credentials (Test Applications)
# GitHub Test App
GITHUB_CLIENT_ID_DEV=dev_github_client_id_12345
GITHUB_CLIENT_SECRET_DEV=dev_github_secret_67890_not_for_production

# Google Test App  
GOOGLE_CLIENT_ID_DEV=dev_google_client.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET_DEV=dev_google_secret_not_for_production

# Development SMS (Console logging only)
SMS_PROVIDER_DEV=console

# Development Redis (Memory fallback)
REDIS_URL_DEV=memory://localhost

# =============================================================================
# SETUP INSTRUCTIONS
# =============================================================================

# 1. BETTER_AUTH_SECRET:
#    Generate a secure random string:
#    node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"

# 2. DATABASE_URL:
#    - PostgreSQL: postgresql://user:password@host:port/database
#    - MySQL: mysql://user:password@host:port/database
#    - SQLite: file:./dev.db

# 3. OAuth Setup:
#    GitHub: https://github.com/settings/applications/new
#    Google: https://console.cloud.google.com/apis/credentials
#    Discord: https://discord.com/developers/applications

# 4. OAuth Redirect URLs:
#    GitHub: http://localhost:3000/api/auth/callback/github
#    Google: http://localhost:3000/api/auth/callback/google
#    Discord: http://localhost:3000/api/auth/callback/discord
#    Facebook: http://localhost:3000/api/auth/callback/facebook
#    Microsoft: http://localhost:3000/api/auth/callback/microsoft

# 5. SMS Provider Setup (for Phone Number Auth):
#    Twilio: https://console.twilio.com/
#    AWS SNS: https://console.aws.amazon.com/sns/
#    For development, use SMS_PROVIDER=console (logs to console)

# 6. Upstash Redis Setup (for Rate Limiting):
#    Create account: https://console.upstash.com/
#    Create Redis database and copy REST URL + Token
#    For development, rate limiting falls back to memory storage

# 7. Feature Flags:
#    Enable/disable features by setting AUTH_FEATURES_* to true/false
#    All features are enabled by default in development

# 8. Analytics Setup:
#    Configure analytics providers in your main app
#    Auth package will automatically track authentication events