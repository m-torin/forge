{
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "@repo/database#prisma:generate"],
      "cache": true,
      "inputs": [
        "src/**",
        "app/**",
        "components/**",
        "lib/**",
        "hooks/**",
        "package.json",
        "tsconfig.json",
        "next.config.*",
        "tailwind.config.*",
        "!**/*.test.*",
        "!**/*.spec.*"
      ],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "cache": false
    }
  }
}
