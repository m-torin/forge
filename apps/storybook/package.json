{
  "name": "storybook",
  "private": true,
  "scripts": {
    "build": "echo 'Storybook build skipped - awaiting Next.js canary support in Storybook 9.1+'",
    "build-storybook": "storybook build --quiet --loglevel warn --stats-json",
    "build:doppler": "doppler run -- storybook build --quiet --loglevel warn --stats-json",
    "chromatic": "chromatic --exit-zero-on-changes",
    "chromatic:doppler": "doppler run -- chromatic --exit-zero-on-changes",
    "circular": "madge --circular --extensions ts,tsx,js,jsx .",
    "coverage:collect": "vitest run --coverage --reporter=json",
    "dev": "storybook dev -p 3700 --quiet --loglevel error --no-open",
    "doppler:open": "doppler open",
    "doppler:pull": "doppler secrets download --no-file --format env > .env.local",
    "doppler:secrets": "doppler secrets",
    "doppler:secrets:download": "doppler secrets download --no-file --format env",
    "doppler:secrets:upload": "doppler secrets upload .env.local",
    "knip": "knip --reporter json --exclude unlisted,unresolved,exports,dependencies,files,binaries,types,duplicates",
    "lint": "eslint . --fix --cache",
    "start": "pnpm exec serve storybook-static -l 3700",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:json": "vitest run --coverage --reporter=json",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@mantine/code-highlight": "catalog:",
    "@mantine/core": "catalog:",
    "@mantine/dates": "catalog:",
    "@mantine/hooks": "catalog:",
    "@mantine/notifications": "catalog:",
    "@repo/uix-system": "workspace:*",
    "next": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.32.0",
    "@repo/config": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "@repo/observability": "workspace:*",
    "@repo/qa": "workspace:*",
    "@storybook/addon-a11y": "next",
    "@storybook/addon-actions": "next",
    "@storybook/addon-docs": "next",
    "@storybook/addon-onboarding": "next",
    "@storybook/addon-themes": "next",
    "@storybook/addon-viewport": "next",
    "@storybook/builder-webpack5": "next",
    "@storybook/manager-api": "next",
    "@storybook/nextjs": "next",
    "@storybook/test-runner": "^0.23.0",
    "@storybook/theming": "next",
    "@t3-oss/env-nextjs": "catalog:",
    "@tailwindcss/postcss": "catalog:",
    "@testing-library/jest-dom": "catalog:",
    "@testing-library/react": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "buffer": "^6.0.3",
    "chromatic": "^13.1.2",
    "crypto-browserify": "^3.12.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-storybook": "next",
    "eslint-plugin-testing-library": "^7.6.1",
    "eslint-plugin-vitest": "^0.5.4",
    "events": "^3.3.0",
    "knip": "catalog:",
    "madge": "catalog:",
    "path-browserify": "^1.0.1",
