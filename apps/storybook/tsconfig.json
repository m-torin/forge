{
  "extends": "@repo/config/typescript/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@repo/*": ["../../packages/*"],
      "#/root/*": ["./*"],
      "#/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    ".storybook/**/*"
  ],
  "exclude": ["node_modules", "storybook-static"]
}
